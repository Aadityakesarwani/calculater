<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cardview_light_background"
    tools:context=".MainActivity">
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  android:id="@+id/fr"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <ImageButton
                android:id="@+id/imageButoon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text=""
                android:scaleType="fitCenter"
                android:layout_gravity="right"
                android:translationX="345dp"
                android:src="@drawable/ic_history"
                android:soundEffectsEnabled="true"
                android:background="@color/cardview_light_background"
                tools:ignore="NestedWeights"
                app:tint="@color/orange" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        >



        <!--   <EditText
               android:id="@+id/inputTv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:autofillHints="false"
               android:textSize="35sp"
               android:textAlignment="textEnd"
               android:text="424"
               android:inputType="none"
               android:paddingEnd="15dp"
               android:textColor="@color/black"
               tools:ignore="LabelFor,RtlSymmetry"
               />-->



           <TextView
               android:id="@+id/inputTv"
               android:autoSizeTextType="uniform"
               android:autoSizeMinTextSize="20sp"
               android:autoSizeMaxTextSize="40sp"
               android:autoSizeStepGranularity="1sp"
               android:autoSizePresetSizes="02sp"
               android:layout_width="match_parent"
               android:layout_weight="3"
               android:gravity="bottom"
               android:layout_height="match_parent"
               android:textSize="40sp"
               android:textColor="@color/cardview_dark_background"
              android:text=" "
            android:paddingVertical="3dp"
             android:textAlignment="textEnd"
             android:paddingEnd="15dp"
               tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/outputTv"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="30sp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeStepGranularity="3sp"
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="0"
            android:gravity=""
            android:paddingBottom="42dp"
            android:textAlignment="textEnd"
            android:paddingEnd="15dp"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/material_on_surface_stroke"
            android:paddingRight="43dp"
            android:paddingStart="3dp"/>

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/AllClean"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AC"
                android:soundEffectsEnabled="true"
                android:textColor="@color/orange"
                android:background="@android:color/transparent"
                android:textSize="25sp"
                tools:ignore="NestedWeights"/>

            <Button
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="⌫"
                android:soundEffectsEnabled="true"
                android:textColor="@color/orange"
                android:background="@android:color/transparent"
                android:textSize="25sp"
                tools:ignore="NestedWeights"/>

            <Button
                android:id="@+id/percent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="%"
                android:textColor="@color/orange"
                android:background="@android:color/transparent"
                android:textSize="26sp"
                tools:ignore="NestedWeights"/>

            <Button
                android:id="@+id/divide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="÷"
                android:textColor="@color/orange"
                android:background="@android:color/transparent"
                android:textSize="40sp"
                tools:ignore="NestedWeights"/>

            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:id="@+id/b7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textColor="@color/cardview_dark_background"
                android:background="@android:color/transparent"
                android:textSize="40sp"
                tools:ignore="NestedWeights,OnClick"/>

            <Button
                android:id="@+id/b8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textColor="@color/cardview_dark_background"
                android:background="@android:color/transparent"
                android:textSize="40sp"
                tools:ignore="NestedWeights,OnClick"/>

            <Button
                android:id="@+id/b9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textColor="@color/cardview_dark_background"
                android:background="@android:color/transparent"
                android:textSize="40sp"
                tools:ignore="NestedWeights"/>

            <Button
                android:id="@+id/multiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="×"
                android:textColor="@color/orange"
                android:background="@android:color/transparent"
                android:textSize="35sp"
                tools:ignore="NestedWeights"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:id="@+id/b4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textColor="@color/cardview_dark_background"
                android:background="@android:color/transparent"
                android:textSize="40sp"
                tools:ignore="NestedWeights"/>

            <Button
                android:id="@+id/b5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textColor="@color/cardview_dark_background"
                android:background="@android:color/transparent"
                android:textSize="40sp"
                tools:ignore="NestedWeights"/>

            <Button
                android:id="@+id/b6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textColor="@color/cardview_dark_background"
                android:background="@android:color/transparent"
                android:textSize="40sp"
                tools:ignore="NestedWeights"/>

            <Button
                android:id="@+id/minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="—"
                android:textColor="@color/orange"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                tools:ignore="NestedWeights"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:id="@+id/b1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textColor="@color/cardview_dark_background"
                android:background="@android:color/transparent"
                android:textSize="40sp"
                tools:ignore="NestedWeights"/>

            <Button
                android:id="@+id/b2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textColor="@color/cardview_dark_background"
                android:background="@android:color/transparent"
                android:textSize="40sp"
                tools:ignore="NestedWeights"/>

            <Button
                android:id="@+id/b3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@color/cardview_dark_background"
                android:background="@android:color/transparent"
                android:textSize="40sp"
                tools:ignore="NestedWeights"/>

            <Button
                android:id="@+id/sum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textColor="@color/orange"
                android:background="@android:color/transparent"
                android:textSize="37sp"
                tools:ignore="NestedWeights"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:id="@+id/b0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textColor="@color/cardview_dark_background"
                android:background="@android:color/transparent"
                android:textSize="40sp"
                tools:ignore="NestedWeights"/>

            <Button
                android:id="@+id/dot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textColor="@color/cardview_dark_background"
                android:background="@android:color/transparent"
                android:textSize="35sp"
                tools:ignore="NestedWeights"/>

            <Button
                android:id="@+id/bracket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="()"
                android:gravity="center"
                android:layout_marginEnd="14dp"
                android:textColor="@color/cardview_dark_background"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:layout_marginBottom="5dp"
                tools:ignore="NestedWeights"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ans"
                android:layout_width="65dp"
                android:layout_height="64dp"
                android:layout_weight="0"
                android:gravity="center"
                android:background="@drawable/circle"
                android:textColor="@color/cardview_dark_background"
                android:text="="
                android:textAlignment="gravity"
                android:layout_gravity="top"
                android:layout_marginEnd="20dp"
                android:textSize="40sp"
                tools:ignore="NestedWeights" />

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>